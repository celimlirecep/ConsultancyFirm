@model Member
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/css/MemberCreate.css" rel="stylesheet" />

</head>
<body style="background-color: bisque">
    @* REGİSTERED USER  *@
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
            <div class="login-form">
                <form asp-action="RegisteredUser" class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input id="user" name="username" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" name="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                        <label for="check"><span class="icon"></span> Keep me Signed in</label>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="#forgot">Forgot Password?</a>
                    </div>
                </form>

                @***************** yeni kayıt işlemleri******************* *@
                <form asp-action="CreateMember" enctype="multipart/form-data" class="sign-up-htm">
                    <div class="group d-flex justify-content-center">
                        <label for="inputTag" class="label d-flex justify-content-between" style="cursor:pointer">
                            Select Image

                            <i class="fa fa-2x fa-camera"></i>
                            <input id="inputTag" type="file" name="file" style="display:none" />
                            <br />
                            <span id="imageName"></span>
                        </label>

                    </div>
                    <div class="group">
                        <label for="user" class="label">Name</label>
                        <input id="user" type="text" asp-for="MemberName" class="input">

                    </div>
                    <div class="group">
                        <label for="user" class="label">Surname</label>
                        <input type="text" asp-for="MemberSurname" class="input">
                    </div>

                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input type="text" asp-for="MemberUsername" class="input">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">PassWord</label>
                        <input type="password" asp-for="MemberPasword" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Repeat Password</label>
                        <input type="password" asp-for="MemberPaswordRepeat" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Email Address</label>
                        <input type="text" asp-for="MemberMail" class="input">
                    </div>

                    <div class="group">
                        <input type="submit" class="button" value="Sign Up">
                    </div>
                    <div class="hr"></div>

                </form>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>

</body>
</html>

