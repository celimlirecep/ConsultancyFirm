@model LoginModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/css/MemberCreate.css" rel="stylesheet" />

</head>
<body style="background-color: bisque">
    @* REGİSTERED USER  *@
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Giriş Yap</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Üye Ol</label>
            <div class="login-form">
                <form asp-action="SignIn" class="sign-in-htm">
                    <br />
                    <div class="group">
                        <label for="user" class="label">Kullanıcı Adı</label>
                        <input id="user" name="LoginUserName" type="text" required class="input"> <br />
                 
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Şifre</label>
                        <input id="pass" type="password" name="loginpassword" class="input" required data-type="password"><br />
                    
                    </div>
                 
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="/Account/ForgotPassword">Şifrenimi Unuttun?</a>
                    </div>
                </form>

                @***************** yeni kayıt işlemleri******************* *@
            <form asp-action="register" enctype="multipart/form-data" class="sign-up-htm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="group d-flex justify-content-center">
                    <label for="inputTag" class="label d-flex justify-content-between" style="cursor:pointer">
                        Resim Seç :

                        <i class="fa fa-2x fa-camera"></i>
                        <input id="inputTag" type="file" name="file" style="display:none" />
                        <br />
                        <span id="imageName"></span>
                    </label>

                </div>
                <div class="group">
                    <label for="user" class="label">Name</label>
                    <input id="user" type="text" asp-for="Name" class="input">

                </div>
                <div class="group">
                    <label for="user" class="label">Surname</label>
                    <input type="text" asp-for="Surname" class="input">
                </div>

                <div class="group">
                    <label for="user" class="label">Username</label>
                    <input type="text" asp-for="UserName" class="input">
                </div>
                <div class="group">
                    <label for="pass" class="label">PassWord</label>
                    <input type="password" asp-for="Password" class="input" data-type="password">
                </div>
                <div class="group">
                    <label for="pass" class="label">Repeat Password</label>
                    <input type="password" asp-for="RePassword" class="input" data-type="password">
                </div>
                <div class="group">
                    <label for="pass" class="label">Email Address</label>
                    <input type="text" asp-for="Email" class="input">
                </div>

                <div class="group">
                    <input type="submit" class="button" value="Sign Up">
                </div>
                <div class="hr"></div>

            </form>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>

</body>
</html>

