
@model  ResetPasswordModel
<body style="background-color: bisque">

    <div class="login-wrap">
        <div class="login-html">
            <h1>Şifre Yenile</h1>

            <div class="login-form">
                <form asp-action="ResetPassword" class="sign-in-htm">
                    <input type="hidden" asp-for="Token" />
                    <div class="group">
                        <label for="user" class="label">Mail Adress</label>
                        <input id="user" asp-for="Email" type="text" class="input">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" name="Password" class="input" data-type="password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="group">
                        <label for="pass" class="col-form-label">Re-Password</label>
                        <input id="pass" type="password" name="RePassword" class="input" data-type="password">
                        <span asp-validation-for="RePassword"></span>
                    </div>

                    <div class="group">
                        <input type="submit" class="button" value="Şifreyi Güncelle">
                    </div>

                </form>

            </div>
        </div>
    </div>
</body>

