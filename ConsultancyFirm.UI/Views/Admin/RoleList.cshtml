@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="text-center">
    <h1>    Role Listesi</h1>
</div>
<div>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th> Role Name</th>
                <th> İşlem</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/admin/RoleDetail/@item.Id" class="btn btn-info">Bu Role Ait Kullanıcılar</a>
                    <a href="/admin/RoleDelete/@item.Id" class="btn btn-danger">Sil</a>
                    <a href="/admin/RoleEdit/@item.Id" class="btn btn-warning">Düzenle</a>

                </td>
            </tr>

            }
        </tbody>

    </table>

</div>
